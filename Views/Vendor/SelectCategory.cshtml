@model EasyService.Models.SelectCategory

@{
    ViewBag.Title = "SelectCategory";
    Layout = "~/Views/Vendor/Shared/_VendorLayoutPage.cshtml";
}
@using (Html.BeginForm("AddListing", "Vendor", FormMethod.Get)) 
{
    @Html.AntiForgeryToken()
    <br />

    <div class="form-horizontal">
        <h4>Select Category for Listing</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Select Category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryId, (IEnumerable<SelectListItem>)ViewBag.categoryList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Dashboard", "Dashboard")
</div>
