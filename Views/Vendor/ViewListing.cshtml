@model IEnumerable<EasyService.Models.VendorListing>

@{
    ViewBag.Title = "ViewListing";
    Layout = "~/Views/Vendor/Shared/_VendorLayoutPage.cshtml";
}

<br />

<h2>Listings</h2>

<p>
    @Html.ActionLink("Create New", "SelectCategory")
</p>
<table class="table">
    <tr>       
        <th>
           Category
        </th>
        <th>
           SubCategory
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phonenumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SubCategory.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.VendorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Phonenumber)
    </td>
    <td>
        @Html.ActionLink(" ", "EditListing", new { id = item.Id }, new { @class = "fa fa-pencil" }) |
        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
        @Html.ActionLink(" ", "DeleteListing", new { id = item.Id }, new { @class = " fa fa-trash-o", onclick = "return confirm('Are you sure you wish to delete this record?');" })
    </td>
</tr>
}

</table>
