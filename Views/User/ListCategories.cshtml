@model IEnumerable<EasyService.Models.Category>

@{
    ViewBag.Title = "ListCategories";
  Layout = "~/Views/User/Shared/_UserLayoutPage.cshtml";
}
   


        <h2>List Of Categories</h2>
        <div class="row">
            @foreach (var item in Model)
            {
          
                <div class="col-md-4">
                    <div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
                        <div class="card-header"></div>
                        <a href="/User/ListSubCategories?Id=@item.Id">
                            <div class="card-body">
                                <h5 class="card-title text-white">
                                    @*@Html.ActionLink(item.Name, "ListSubCategories", new { Id = item.Id })*@
                                    @item.Name
                                </h5>
                            </div>
                        </a>
                    </div>
                </div>
           
              

            }

        </div>
           


       



   




